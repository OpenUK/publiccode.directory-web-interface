{% extends 'partials/base.html.twig' %}

{% block content %}

    <div class="columns is-centered">
        <div class="column is-10 is-8-desktop">

            <div class="content">
                <h1>
                    {{ page.title }}
                </h1>
                {{ page.content }}
            </div>

            <hr>

            {% for post in page.find('/blog').children.order('publish_date', 'desc').slice(0, 3) %}
                {% include 'partials/post.html.twig' %}
            {% endfor %}

        </div>
    </div>

{% endblock %}
